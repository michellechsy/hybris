<?xml version="1.0" encoding="utf-8" standalone="yes" ?>

<!-- Step3a: Passing data between widgets
  Create the widget definition for a "chat" function
  Make sure the id is unique, otherwise it will not appear on the list of widgets in the
  "Choose a widget" wizard from within the Application Orchestration.
-->
<widget-definition
    id="org.mibackoffice.widgets.michat"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd">

  <name>MiChat</name>
  <description>Mi chat widget</description>
  <defaultTitle>miChat</defaultTitle>
  <author>Mi</author>
  <version>0.1</version>

  <keywords>
    <!-- keyword tag is used to define a category under which the widget is visible,
     when adding it to your application in application orchestrator  -->
    <keyword>Chat</keyword>
  </keywords>

  <sockets>
    <input type="java.lang.String" id="incomingMsg" />
    <output type="java.lang.String" id="outgoingMsg" />
  </sockets>

  <!-- Step3c: add the controller -->
  <controller class="com.mi.backoffice.widgets.step3.MiChatController" />


  <!-- Step4a: Modif a Widget Definition
    Add two settings that will make it possible to add additional, only one widget
  -->
  <settings>
    <!-- this setting is accessed in the view file of chat window -->
    <setting key="multi" type="Boolean" default-value="false" />
    <!-- this setting is accessed in the controller of chat widget -->
    <setting key="history" type="Boolean" default-value="false" />


  </settings>
</widget-definition>