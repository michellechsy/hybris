<?xml version="1.0" encoding="utf-8" standalone="yes" ?>

<!-- Step1a: create a widget definition
  Make sure the id is unique, otherwise it will not appear on the list of widgets in the
  "Choose a widget" wizard from within the Application Orchestration.
-->
<widget-definition
    id="org.mibackoffice.widgets.misearch"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="http://www.hybris.com/schema/cockpitng/widget-definition.xsd">

  <name>Mi Search</name>
  <description>Mi search widget</description>
  <defaultTitle>Search</defaultTitle>
  <author>Mi</author>
  <version>0.1</version>

  <!-- step 1d: add the controller -->
  <view src="misearch.zul" />
  <controller class="com.mi.backoffice.widgets.step1.MiSearchController" />

  <!-- step2a: test a widget
  Let's assume that you want to test a sample widget that takes a String as its only input, and
  after the input is notified an output containing the String split by dots is being sent. Moreover,
   on demand (for example a user clicks a button) the size of last given output is sent to another
   output:
  -->
  <sockets>
    <input id="in" type="java.lang.String" />
    <output id="out" type="java.util.Collection[String]" />
    <output id="size" type="java.lang.Integer" />
  </sockets>
  <view src="demo-widget.zul" />
  <controller class="com.mi.backoffice.widgets.step2.DemoWidgetController" />
  <keywords>
    <keyword>Demo</keyword>
  </keywords>

</widget-definition>